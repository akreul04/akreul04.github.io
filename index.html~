var shown = false;
function showhide(){
	alert("here");
	if (shown){
		document.getElementById('email').innerHTML = "show my email";
		shown = false;
	}else{
		var myemail = "<a href='mailto:kreul.adam" + "@" + "gmail.com'>kreul.adam" + "@" + "gmail.com</a>";
		alert("myemail="+myemail);
		document.getElementById('email').innerHTML=myemail;
		shown = true;
	}
}
